@model List<ControlProduct.Models.ViewModel.DebitoViewModel>
@{
    ViewData["Title"] = "Débitos";
}

<div class="text-center">
    <h1 class="display-4">Débitos</h1>
</div>

<div class="text-right mb-2">
    <a class="btn btn-primary" asp-action="CadastroDebito">Novo Débito</a>
</div>

<div class="row">
    <div class="col-12">
        <table class="datatable-categorias table">
            <thead>
                <tr>
                    <th>Mês</th>
                    <th>Lucro</th>
                    <th>Investimento</th>
                    <th>Saldo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var debito in Model)
                {
                    <tr>
                        <td>@debito.Data</td>
                        <td class="moneyMask">@debito.Entrada</td>
                        <td class="moneyMask">@debito.Saida</td>
                        <td>
                            @debito.Total
                        </td>
                        <td>
                            <a asp-action="CadastroDebito" asp-route-idDebito="@debito.Id">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var DataTableConfig = {
        columnDefs: [
            {
                targets: [4],
                orderable: false,
                searchable: false
            }
        ]
    }
</script>

@section Scripts {
    <script>
        $(document).ready(function () {
            setMoneyMask();
        });
    </script>
}